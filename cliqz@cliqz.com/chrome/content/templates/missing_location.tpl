<div class="location_permission_prompt">
  <div class="loc_permission_prompt_message">
    {{local 'location_permission_prompt'}}
  </div>
  <div class="loc_permission_prompt_buttons">
    <span class="cqz-btn-default" id="cqz_location_yes" bm_url='{{friendly_url}}'>
      {{local 'yes'}}
    </span>
    <span class="cqz-btn-error" id="cqz_location_once" bm_url='{{friendly_url}}'>
      {{local 'location_just_once'}}
    </span>
    <span class="cqz-btn-error" id="cqz_location_not_now">
      {{local 'location_not_now'}}
    </span>
    <span class="cqz-btn-error" id="cqz_location_no" location_confirm_no_msg='{{confirm_no_msg}}' bm_url='{{friendly_url}}'>
      {{local 'location_never'}}
    </span>
  </div>
</div>
