<div id="settings-btn" {{action 'showPanel'}}></div>

{{#if showPanel}}
<div id="settings-panel-container">
  <div id="settings-panel" orient="vertical" open="true">
    <div id="settings-panel-anchor"></div>
    <div id="settings-panel-inner-wrapper">
      <div id="settings-title">
        <h2>{{t 'settings.hdr-customize'}}</h2>
      </div>

      <div class="settings-panel-item hidden">
        <h3>
          {{t 'settings.hdr-top-sites'}}
        </h3>
        <div class="settings-panel-row">
          <svg class="infobutton" width="14px" height="14px" viewBox="0 0 14 14" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
          <defs></defs>
          <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
            <g id="CT-settings" transform="translate(-331.000000, -301.000000)">
              <g id="info" transform="translate(331.000000, 301.000000)">
                <g id="Group-2">
                  <ellipse id="Oval-2" fill="#D0D0D0" cx="7" cy="7" rx="7" ry="7"></ellipse>
                  <g id="Group" transform="translate(4.000000, 0.000000)" font-size="11.2" font-family="AmericanTypewriter-Bold, American Typewriter" fill="#FFFFFF" font-weight="bold">
                      <text id="i">
                        <tspan x="0.941176471" y="11" style="font-family:AmericanTypewriter-Bold, American Typewriter">i</tspan>
                      </text>
                  </g>
                </g>
              </g>
            </g>
          </g>
        </svg>
        <div class="tooltip left">
          <span>{{t 'settings.tooltip-mail-notifications'}}</span>
        </div>
          <label>{{t 'settings.txt-show-mail-notifications'}}</label>
          {{mail-notifications model=model}}
        </div>
      </div>

      <div class="settings-panel-item">
        <h3>
          {{t 'settings.hdr-news-feed'}}
        </h3>
        <div class="settings-panel-row">
          <svg class="infobutton" width="14px" height="14px" viewBox="0 0 14 14" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
              <defs></defs>
              <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="CT-settings" transform="translate(-331.000000, -301.000000)">
                  <g id="info" transform="translate(331.000000, 301.000000)">
                    <g id="Group-2">
                      <ellipse id="Oval-2" fill="#D0D0D0" cx="7" cy="7" rx="7" ry="7"></ellipse>
                      <g id="Group" transform="translate(4.000000, 0.000000)" font-size="11.2" font-family="AmericanTypewriter-Bold, American Typewriter" fill="#FFFFFF" font-weight="bold">
                          <text id="i">
                            <tspan x="0.941176471" y="11" style="font-family:AmericanTypewriter-Bold, American Typewriter">i</tspan>
                          </text>
                      </g>
                    </g>
                  </g>
                </g>
              </g>
            </svg>
          <div class="tooltip left">
            <span>{{t 'settings.tooltip-top-news'}}</span>
          </div>
          <label>{{t 'settings.txt-top-news-edition'}}</label>
        </div>
        <div class="settings-panel-row">
          {{news-language model=model}}
        </div>
      </div>
    </div>

    <div id="settings-bottom-part">
      <span class="feedback-icon"></span>

      <a href="#" {{action "openFeedbackPage"}} class="feedback-link" target="_blank">{{t 'settings.send-us-feedback'}}</a>
    </div>
  </div>
</div>
{{/if}}