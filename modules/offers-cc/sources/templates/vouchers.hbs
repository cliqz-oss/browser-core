{{#each this  }}
    <li data-offer-id="{{ offer_id }}">
        <div
            class="cqz-ticket-offer
                        {{#unless template_data.call_to_action }}
                           cqz-no-call-to-action
                        {{/unless }}
                        cqz-clear {{ template_data.voucher_classes }}"
        >
            <div class="cqz-offer-holder"
                 style="background-color: {{ template_data.styles.background }}; background-image: url({{ template_data.logo_url }});">
                <span
                    class="logo-click"
                    openurl="{{ template_data.call_to_action.url }}"
                    data-cqz-of-btn-id="offer_description"
                >
                </span>
                <div class="cqz-logo-holder">
                    {{#if template_data.logo_url }}
                        <!--<img src="{{ template_data.logo_url }}" alt=""/>-->
                    {{else if template_data.captions }}
                    <table class="cqz-offer-captions">
                        <tr>
                            <td>
                                <span>{{ template_data.captions.cap1}}</span>
                                <span>{{ template_data.captions.cap2}}</span>
                            </td>
                        </tr>
                    </table>
                    {{/if }}
                </div>

                {{#if template_data.call_to_action }}
                    <div class="cqz-call-to-action">
                        <a openurl="{{ template_data.call_to_action.url }}"
                           class="cqz-btn cqz-close-hub"
                           data-cqz-of-btn-id="offer_ca_action"
                           data-cqz-of-btn-action-type="offer-action-signal"
                           data-cqz-offer-id="{{ offer_id }}"
                           target="{{ template_data.call_to_action.target }}"
                           style="color: {{ template_data.styles.call-to-action-color }}; background: {{ template_data.styles.call-to-action-bg-color }}"
                        >
                            {{ template_data.call_to_action.text }}
                        </a>
                    </div>
                {{/if }}


                <div class="cqz-content-holder">
                    <h1
                        class="cqz-title"
                        style="color: {{ template_data.styles.title-color }}"
                        openurl="{{ template_data.call_to_action.url }}"
                        data-cqz-of-btn-id="offer_title"
                        data-cqz-of-btn-action-type="offer-action-signal"
                    >
                        {{ template_data.title }}
                    </h1>

                    {{#if template_data.code }}
                        <div class="cqz-offer-code-holder">
                            <span class="cqz-offer-code-info" data-i18n="offers-hub-code-copy"></span>
                            <span class="cqz-offer-code"
                                  data-cqz-of-btn-id="code_copied"
                                  data-cqz-offer-id="{{ offer_id }}"
                                  data-cqz-of-btn-action-type="offer-action-signal"
                            >{{ template_data.code  }}</span>
                            <!-- Do not put {{ template_data.code  }} otherwise will bring empty spaces in COPY selection-->
                        </div>
                    {{/if }}


                    <div
                        class="cqz-descr"
                        style="color: {{ template_data.styles.description-color }}"
                        openurl="{{ template_data.call_to_action.url }}"
                        data-cqz-of-btn-id="offer_description"
                        data-cqz-of-btn-action-type="offer-action-signal"
                    >
                        {{ template_data.desc }}

                    </div>
                    {{#if template_data.conditions }}
                        <span class="descr-read-more">
                             <i>
                                <svg version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
                                     width="512px" height="512px" viewBox="0 0 512 512" enable-background="new 0 0 512 512" xml:space="preserve">
                                <path id="info-5-icon" d="M256,50.002C142.229,50.002,50,142.228,50,256c0,113.769,92.229,205.998,206,205.998
                                    c113.77,0,206-92.229,206-205.998C462,142.228,369.77,50.002,256,50.002z M251.989,376.93
                                    c-29.694,10.436-54.175-1.531-49.264-30.049c4.913-28.523,33.09-89.589,37.11-101.135c4.017-11.547-3.687-14.712-11.943-10.015
                                    c-4.763,2.749-11.84,8.254-17.916,13.606c-1.685-3.393-4.055-7.27-5.833-10.983c9.915-9.936,26.488-23.256,46.108-28.083
                                    c23.441-5.787,62.624,3.463,45.783,48.271c-12.024,31.937-20.529,53.976-25.888,70.388c-5.356,16.418,1.006,19.861,10.382,13.464
                                    c7.325-5.001,15.129-11.804,20.849-17.079c2.646,4.301,3.494,5.672,6.11,10.614C297.559,346.105,271.584,369.924,251.989,376.93z
                                     M313.516,179.372c-13.469,11.463-33.433,11.216-44.601-0.561c-11.166-11.77-9.302-30.606,4.163-42.072
                                    c13.468-11.463,33.435-11.215,44.6,0.553C328.843,149.066,326.98,167.902,313.516,179.372z"/>
                                </svg>
                            </i>
                            <span data-i18n="control-center-offers-conditions"></span>
                            <span class="hover-wrapper">
                                <span class="text-holder">
                                    {{ template_data.conditions }}
                                </span>
                            </span>
                        </span>
                    {{/if }}
                </div>
            </div>
            <span
                class="cqz-close"
                data-cqz-of-btn-id="close-offer-link"
                data-cqz-of-btn-action-type="remove_offer_link"
                data-cqz-offer-id="{{ offer_id }}"
            ></span>
        </div>
    </li>
{{/each}}
