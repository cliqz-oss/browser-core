<!-- ligaEZ1Game.tpl-->

{{#with logo}}
    <div class="card__logo {{#if backgroundImage}}bg{{/if}}" style="{{#if backgroundImage}}background-image:{{backgroundImage}};{{#if backgroundColor}} background-color:#{{backgroundColor}};{{/if}}{{else}}{{ style }};{{/if}}">{{ text }}</div>
{{/with}}

{{#with data.extra}}
    <section class="primary">
        <h1 class="card__title">
            {{../data.title}}
        </h1>
        <div class="card__meta">
            <div>{{../urlDetails.friendly_url}}</div>
        </div>
        <div class="card__description">
            {{../data.description}}
        </div>

        <div class="soccer__result" cliqz-action="stop-click-event-propagation" onclick="osAPI.openLink('{{live_url}}')">

            <h5>{{spielTag}}</h5>
            <span class="meta__legend">{{gameTime}} - {{location}}</span>

            <table cellspacing="0" cellpadding="0">
              <tr>
               <td>{{HOST}}</td>
               <td class="score">
                 {{#if isLive}}
                   <div class="ez-liga-score">{{scored}}
                     <div class="ez-liga-live">live</div>
                   </div>
                 {{else if scored}}
                   <div class="ez-liga-vs">{{scored}}</div>
                 {{else}}
                   <div class="ez-liga-vs">{{local 'vs'}}</div>
                 {{/if}}
               </td>
               <td>{{GUESS}}</td>
             </tr>
           </table>

        </div>
    </section>
{{/with}}

{{#each data.deepResults}}
    {{#if (logic type '===' 'news')}}
        <section class="secondary" cliqz-action="stop-click-event-propagation">
          <div class="main mulitple">
            {{#each links}}
              <div url="{{url}}" extra="entry-{{@index}}" class="item">
                <div class="main__image" data-style="background-image: url({{#if extra.thumbnail}}{{ extra.thumbnail }}{{else}}http://cdn.cliqz.com/extension/EZ/news/no-image-mobile.png{{/if}});">
                  Image
                </div>
                <h1 class="main__headline">
                  {{ title }}
                  <span>
                    {{#if extra.tweet_count}}
                      <span class="tweet_count">
                        <img data-src="http://cdn.cliqz.com/extension/EZ/cliqz/EZ-social-twitter.svg"> {{extra.tweet_count}}
                      </span>
                    {{/if}}
                    {{ agoline extra.discovery_timestamp }}
                  </span>
                </h1>
              </div>
            {{/each}}
          </div>
        </section>
    {{/if}}
{{/each}}

<div class="poweredby" url="http://www.kicker.de/mobile/startseite.html">
    <div class="card__logo__poweredby bg"
        data-style="background-size: 75%;background-image:url(https://cdn.cliqz.com/brands-database/database/1452759183853/logos/kicker/$.svg);background-color:#FF1D1D;top:inherit;"
        style="background-size: 75%;background-image:url(https://cdn.cliqz.com/brands-database/database/1452759183853/logos/kicker/$.svg);background-color: #FF1D1D;top:inherit;">
            Ki
    </div>
    {{local 'KickerSponsor'}}
</div>

{{>EZ-category}}

<!-- end ligaEZ1Game.tpl-->
