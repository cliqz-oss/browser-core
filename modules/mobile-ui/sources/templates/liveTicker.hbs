<!-- liveTicker.tpl -->
{{#with logo}}
    <div extra="logo" class="card__logo {{#if backgroundImage}}bg{{/if}}" data-style="{{#if backgroundImage}}background-image:{{backgroundImage}};{{#if backgroundColor}} background-color:#{{backgroundColor}};{{/if}}{{else}}{{ style }};{{/if}}">
        {{ text }}
    </div>
{{/with}}

<section class="primary">
    <h1 extra="title" class="card__title">{{ data.title }}</h1>
    <div extra="url" class="card__meta">
        <div>{{urlDetails.friendly_url}}</div>
    </div>
</section>
<section class="secondary">
    <div class="card__description bundesliga">
        {{#each data.extra.matches }}
            <h2>{{ data.spielTag }} {{ this.date }}</h2>

            <div class="card__incard cf">
                {{#each this.matches }}

                    <div class="card__incard__item" url="{{live_url}}">

                        <div class="card__incard__content">
                            <h4>
                                {{ this.HOST }}
                            </h4>
                            <div class="score">
                                {{ this.scored }} <span>({{ this.gameTimeHour }})</span>
                            </div>
                            <h4>
                                {{ this.GUESS }}
                            </h4>
                        </div>

                    </div>

                {{/each}}

            </div>
        {{/each}}
    </div>
</section>

<div class="poweredby" url="http://www.kicker.de/?gomobile=1">
    <div class="card__logo__poweredby bg"
        data-style="background-size: 75%;background-image:url(https://cdn.cliqz.com/brands-database/database/1452759183853/logos/kicker/$.svg);background-color:#FF1D1D;top:inherit;"
        style="background-size: 75%;background-image:url(https://cdn.cliqz.com/brands-database/database/1452759183853/logos/kicker/$.svg);background-color: #FF1D1D;top:inherit;">
            Ki
    </div>
    {{local 'KickerSponsor'}}
</div>
<!-- end liveTicker.tpl -->
