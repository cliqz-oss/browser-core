<a class="result search" href="{{url}}">
    <div class="icons">
        <span class="icon {{icon}}"></span>
    </div>
    <div class="abstract">
        <p>
            <span class="strong">
                {{#if defaultSearchResult}}
                    {{displayText}}
                {{else}}
                    {{emphasis displayText query 1 true}}
                {{/if}}
            </span>
            {{#if displayText}}
                <span class="divider">&#8212;</span>
            {{/if}}
            <span class="url">{{local 'searchWith' engine}}</span>
        </p>
    </div>
</a>
