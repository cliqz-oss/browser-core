<div class="cqz-offer cqz-clear {{ voucher_classes }}" style="background: {{ styles.background }}">
    <div class="cqz-logo-holder">
        <img src="{{ logo_url }}" alt=""/>
    </div>

    {{#if code}}
        {{#if call_to_action}}
            <div class="cqz-buttons">
                <a href="#{{ call_to_action.url }}"
                   class="cqz-btn"
                   data-cqz-of-btn-id="call-to-action"
                   target="{{ call_to_action.target }}"
                    style="color: {{ styles.call-to-action-color }}; background: {{ styles.call-to-action-bg-color }}">
                    {{ call_to_action.text }}
                </a>
            </div>
        {{/if }}
    {{/if }}

    <div class="cqz-content-holder">
        <h1 class="cqz-title" style="color: {{ styles.title-color }}">
            {{ title }}
        </h1>

        {{#if code }}
            <div class="cqz-offer-code-holder">
                <span class="cqz-offer-code-info">{{ 'local offers_copy_code' }}</span>
                <span class="cqz-offer-code" data-cqz-of-btn-id="copy-code">
                    {{ code }}
                </span>
            </div>
        {{else if call_to_action }}
            <div class="cqz-buttons">
                <a href="#{{ call_to_action.url }}"
                   class="cqz-btn"
                   data-cqz-of-btn-id="call-to-action"
                   target="{{ call_to_action.target }}"
                    style="color: {{ styles.call-to-action-color }}; background: {{ styles.call-to-action-bg-color }}">
                    {{ call_to_action.text }}
                </a>
            </div>
        {{/if }}

        <div class="cqz-descr" style="color: {{ styles.description-color }}">
            {{ conditions }} <br>
            {{ desc }}
        </div>
