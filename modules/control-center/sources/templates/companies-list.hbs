<div class="setting-accordion">
  {{#each companiesArray}}
    <div class="setting-accordion-section {{#if isInactive }} inactive{{/if}}">
      <a class="setting-accordion-section-title {{#if_eq ../module "adblock"}} accordion-inactive-title {{/if_eq}}"
         href="#accordion-{{@index}}"
         data-target="{{../module}}_details_company_section"
         data-index="{{@index}}"
         {{#if_eq ../module "attrack"}}
            openUrl="https://cliqz.com/whycliqz/anti-tracking/tracker#{{ watchDogName }}"
         {{/if_eq}}
         data-closepopup='false'>
        <svg id="arrow" width="13px" height="13px" viewBox="0 0 7 13" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
          <defs></defs>
          <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
            <g id="Anti-Tracking-details-companies" transform="translate(-919.000000, -410.000000)" stroke="#979797">
              <g id="Group-5" transform="translate(916.161758, 301.379578)">
                <polyline id="Path-94-Copy-26" transform="translate(6.325000, 115.322996) rotate(-90.000000) translate(-6.325000, -115.322996) " points="0.575 112.533277 6.28204074 118.197996 12.075 112.447996"></polyline>
              </g>
            </g>
          </g>
        </svg>
        <span>{{name}}</span>
      </a>
      <span class="company-count">{{count}}</span>

        <div id="accordion-{{@index}}" class="setting-accordion-section-content">
          {{#each domains}}
            <span class="bullet">{{domain}} </span>
          {{/each}}
        </div>
    </div>
  {{/each}}
</div>
