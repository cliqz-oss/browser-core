          <path class="fill" d="M30.1535009,32.1264854 L31.214161,33.1871456 L33.3354814,31.0658253 L32.2748212,30.0051651 C32.2748212,30.0051651 35.0784737,32.8088176 26.612587,24.3429309 C18.1467002,15.8770441 9.68081344,7.41115734 9.68081344,7.41115734 L8.62015327,6.35049716 L6.49883292,8.47181751 L7.55949309,9.53247768 L30.1535009,32.1264854 Z"
            id="Line-Copy-88" fill="#2CBA64"></path>
        </g>
      </svg>
      <span id="count">{{ module.adblocker.totalCount }}</span>
    </div>
    <p class="description" data-i18n="control-center-adblock-description" visible-on-state="active"></p>
    <p class="description" data-i18n="control-center-adblock-description-off-website" visible-on-state="off" data-visible="off_website"></p>
    <p class="description" data-i18n="control-center-adblock-description-off-domain" visible-on-state="off" data-visible="off_domain"></p>
    <p class="description" data-i18n="control-center-adblock-description-off-all" visible-on-state="off" data-visible="off_all"></p>

    <div class="switches">
      <!--======= Switch ======-->
      <span>
        <span class="cqz-switch"
              data-type="switch"
              adBlockerStatusChanger>
          <span class="cqz-switch-box"></span>
        </span>
        <span visible-on-state="active" data-i18n="control-center-switch-on"></span>
        <span visible-on-state="off" data-i18n="control-center-switch-off"></span>
      </span>
      <select class="dropdown-scope" visible-on-state="off">
        <option stop-navigation {{#if module.adblocker.disabledForUrl }}selected{{/if}}
            data-i18n="control-center-this-site"
            value="page"
            data-type="off_select"
            data-state="off_website"
            adBlockerStatusChanger></option>
        <option stop-navigation {{#if module.adblocker.disabledForDomain }}selected{{/if}}
            data-i18n="control-center-this-domain"
            value="domain"
            data-type="off_select"
            data-state="off_domain"
            adBlockerStatusChanger></option>
        <option stop-navigation {{#if module.adblocker.disabledEverywhere }}selected{{/if}}
            data-i18n="control-center-all-sites"
            value="all-sites"
            data-type="off_select"
            data-state="off_all"
            adBlockerStatusChanger></option>
      </select>
      <span visible-on-state="active">
        <span class="squaredFour">
          <input type="checkbox"
                 id="squaredFour2"
                 data-function="adb-optimized"
                 name="check"
                 {{#if module.adblocker.optimized }}checked{{/if}} />
          <label for="squaredFour2"></label>
          <span id="strict" data-i18n="control-center-check-strict"></span>
        </span>
      </span>
    </div>
  </div>
  <div class="active-window-adblock">
    {{> active-ad-blocking }}
  </div>
</div>
{{/if}}
